<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ListView android:id="@+id/musicListView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <View android:layout_width="match_parent"
    android:layout_height="3dp"
    android:background="@drawable/toolbar_shadow_theme"/>

    <android.support.v7.widget.Toolbar
        android:id="@+id/ng_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/app_bar_height"
        android:background="@drawable/toolbar_radius"
        android:layout_gravity="bottom"
        >
        <ImageView
            android:id="@+id/img_play"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/stop"
            android:layout_marginRight="@dimen/ng_bt_margint_right"/>
        <ImageView
            android:id="@+id/img_next"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@mipmap/next"/>
        <TextView
            android:id="@+id/song_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="MusicPlayer"
            android:textSize="@dimen/text_size"
            android:textColor="@color/textColor"
            android:layout_marginLeft="40dp"/>
    </android.support.v7.widget.Toolbar>

</LinearLayout>